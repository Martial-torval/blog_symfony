{% extends 'base.html.twig' %}

{# {% block head %}
{% endblock %} #}


{% block title %}Hello HomeController!{% endblock %}


{% block body %}

<h2 class="text-center"> Post list </h2>
<div class="container">
<div class="row col-12">
{% for item in post %}
<div class="col-4">
<a href="{{ path('show', {'id' : item.id}) }}" class="text-decoration-none color-dark">
<h3 class="text-left mt-5 w-50 ms-3">{{ item.title }}</h3>
<img src="{{ item.illustration }}"/>


<p class="text-left w-50 ms-3">{{ item.content }}</p>
</a>

<span class="text-center ms-3">{{item.category.nameCategory}}</span>
<span class="text-center ms-3">{{item.createdAt|date("m/d/Y")}}</span>
<hr class="w-50">
{% endfor %}
{% endblock %}
 {% block footer %}
{% endblock %}

<div class="card mb-3">
  <img class="card-img-top" src="src="{{ item.illustration }}"" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">Card title</h5>
    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
  </div>
</div>


